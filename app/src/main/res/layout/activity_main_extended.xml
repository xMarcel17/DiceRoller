<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityExtended">

    <ImageView
        android:id="@+id/Dice4Img"
        android:layout_width="73dp"
        android:layout_height="225dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/Dice3Img"
        app:layout_constraintTop_toBottomOf="@+id/playerLabel"
        app:srcCompat="@drawable/dice_1" />

    <ImageView
        android:id="@+id/Dice5Img"
        android:layout_width="73dp"
        android:layout_height="225dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Dice4Img"
        app:layout_constraintTop_toBottomOf="@+id/playerLabel"
        app:srcCompat="@drawable/dice_1" />

    <ImageView
        android:id="@+id/Dice3Img"
        android:layout_width="73dp"
        android:layout_height="225dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/Dice2Img"
        app:layout_constraintTop_toBottomOf="@+id/playerLabel"
        app:srcCompat="@drawable/dice_1" />

    <ImageView
        android:id="@+id/Dice1Img"
        android:layout_width="73dp"
        android:layout_height="225dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerLabel"
        app:srcCompat="@drawable/dice_1" />

    <ImageView
        android:id="@+id/Dice2Img"
        android:layout_width="73dp"
        android:layout_height="225dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/Dice1Img"
        app:layout_constraintTop_toBottomOf="@+id/playerLabel"
        app:srcCompat="@drawable/dice_1" />

    <Button
        android:id="@+id/RollButton"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/myBlue"
        android:text="@string/start"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RollResultText" />

    <TextView
        android:id="@+id/playerLabel"
        android:layout_width="412dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp"
        android:text="@string/player_d"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RollResultText"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:text="@string/click_start"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dice1Img" />

</androidx.constraintlayout.widget.ConstraintLayout>